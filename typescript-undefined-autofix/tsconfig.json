{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": ["node"]
  },
  "include": ["src", "*.js"]
}
